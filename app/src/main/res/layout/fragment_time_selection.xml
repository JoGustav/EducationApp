<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_selection_prompt"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#595959"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_selection_hint"
        android:textSize="14sp"
        android:textColor="#595959"
        android:layout_gravity="center_horizontal" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <RadioButton
            android:layout_margin="2dp"
            android:padding="10dp"
            android:id="@+id/radio_casual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/casual"
            android:textColor="#FFFFFFFF"
            android:button="@null"
            android:background="@drawable/radio_button_background"
            android:textSize="16sp"
            android:checked="true"/>

        <RadioButton
            android:layout_margin="2dp"
            android:padding="10dp"
            android:id="@+id/radio_regular"
            android:textColor="#595959"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/radio_button_background"
            android:text="@string/regular"
            android:textSize="16sp"/>

        <RadioButton
            android:layout_margin="2dp"
            android:textColor="#595959"
            android:padding="10dp"
            android:id="@+id/radio_serious"
            android:layout_width="match_parent"
            android:button="@null"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_button_background"
            android:text="@string/serious"
            android:textSize="16sp"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="100dp"
        android:id="@+id/button_continue"
        style="@style/CustomButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next" />
</LinearLayout>
