<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_element">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/row_element"
            android:padding="12dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:id="@+id/stage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название курса"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/stage_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/stage_title"
                app:layout_constraintTop_toBottomOf="@+id/stage_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>