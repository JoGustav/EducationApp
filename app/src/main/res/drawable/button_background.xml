<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень кнопки -->
    <item android:right="0dp" android:top="1dp" android:bottom="-1dp">
        <shape>
            <corners android:radius="14dp" />
            <solid android:color="#007acc" />
        </shape>
    </item>
    <item android:bottom="5dp" android:left="1dp" android:right="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#0099ff"
                android:endColor="#33adff"
                android:type="linear" />
            <corners android:radius="14dp" />
        </shape>
    </item>
</layer-list>
